#!/usr/bin/env python
# nbaget 2018
import sys
import os

os.system('wget http://www.basketball-reference.com/leagues/NBA_' + sys.argv[1] + '.html -O ../data/nba/' + sys.argv[1] + '/raw/nba.html')

os.system('./brget BOS bos ' + sys.argv[1])
os.system('./brget NJN nj ' + sys.argv[1])
os.system('./brget NYK ny ' + sys.argv[1])
os.system('./brget PHI phi ' + sys.argv[1])
os.system('./brget TOR tor ' + sys.argv[1])
os.system('./brget CHI chi ' + sys.argv[1])
os.system('./brget CLE cle ' + sys.argv[1])
os.system('./brget DET det ' + sys.argv[1])
os.system('./brget IND ind ' + sys.argv[1])
os.system('./brget MIL mil ' + sys.argv[1])
os.system('./brget ATL atl ' + sys.argv[1])
os.system('./brget CHA cha ' + sys.argv[1])
os.system('./brget MIA mia ' + sys.argv[1])
os.system('./brget ORL orl ' + sys.argv[1])
os.system('./brget WAS was ' + sys.argv[1])
os.system('./brget DAL dal ' + sys.argv[1])
os.system('./brget HOU hou ' + sys.argv[1])
os.system('./brget MEM mem ' + sys.argv[1])
os.system('./brget NOH no ' + sys.argv[1])
os.system('./brget SAS sa ' + sys.argv[1])
os.system('./brget DEN den ' + sys.argv[1])
os.system('./brget MIN min ' + sys.argv[1])
os.system('./brget POR por ' + sys.argv[1])
##os.system('./brget SEA sea ' + sys.argv[1])
os.system('./brget OKC okc ' + sys.argv[1])
os.system('./brget UTA uta ' + sys.argv[1])
os.system('./brget GSW gs ' + sys.argv[1])
os.system('./brget LAC lac ' + sys.argv[1])
os.system('./brget LAL lal ' + sys.argv[1])
os.system('./brget PHO pho ' + sys.argv[1])
os.system('./brget SAC sac ' + sys.argv[1])

## y1=second year (i.e. 2010)
## y2=combined years (i.e. 0910)
## y3=first year (i.e. 09)

y1 = sys.argv[1]
yy = int(y1[2:4])
y2 = ("%02d" % yy-1) + ("%02d" % yy)
y3 = ("%02d" % yy-1)

def 82get(a, b):
    os.system('./82get ' + a + ' ' + b + ' ' + y1 + ' ' + y2 + ' ' + y3)

82get(BOS, bos)
82get(NJN, nj)
82get(NYK, ny)
82get(PHI, phi)
82get(TOR, tor)
82get(CHI, chi)
82get(CLE, cle)
82get(DET, det)
82get(IND, ind)
82get(MIL, mil)
82get(ATL, atl)
82get(CHA, cha)
82get(MIA, mia)
82get(ORL, orl)
82get(WAS, was)
82get(DAL, dal)
82get(HOU, hou)
82get(MEM, mem)
82get(NOH, no)
82get(SAS, sa)
82get(DEN, den)
82get(MIN, min)
82get(POR, por)
##82get(SEA, sea)
82get(OKC, okc)
82get(UTA, uta)
82get(GSW, gs)
82get(LAC, lac)
82get(LAL, lal)
82get(PHO, pho)
82get(SAC, sac)
